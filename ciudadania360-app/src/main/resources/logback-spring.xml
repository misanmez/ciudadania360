<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- Configuración específica para suprimir warnings -->
    <logger name="org.hibernate.spatial" level="WARN"/>
    <logger name="org.springframework.security.authentication" level="WARN"/>
    <logger name="org.springframework.security.web" level="WARN"/>
    <logger name="org.apache.cxf" level="INFO"/>
    
    <!-- Configuración para desarrollo -->
    <springProfile name="!prod">
        <logger name="com.ciudadania360" level="DEBUG"/>
        <logger name="org.hibernate.SQL" level="DEBUG"/>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>
    </springProfile>
    
    <!-- Configuración para producción -->
    <springProfile name="prod">
        <logger name="com.ciudadania360" level="INFO"/>
        <logger name="org.hibernate.SQL" level="WARN"/>
        <logger name="org.springframework.security" level="WARN"/>
    </springProfile>
    
    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>

